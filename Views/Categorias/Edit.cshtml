@model TiendaMarvel.Models.CategoriaModel

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="~/css/Ticket.css" />

<h2>Editar</h2>

<h4>Editr de categorias</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoriaCodigo" class="control-label"></label>
                <input asp-for="CategoriaCodigo" class="form-control" readonly/>
