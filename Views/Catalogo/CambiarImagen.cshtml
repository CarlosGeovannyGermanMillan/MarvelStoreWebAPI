@model TiendaMarvel.Models.ProductoCambiarImagenModel
<link rel="stylesheet" href="~/css/Ticket.css" />
@{
    ViewData["Title"] = "CambiarImagen";
}

<h2>Cambiar Imagen</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="CambiarImagen">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id" class="control-label"></label>
                @Model.id
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                @Model.Nombre
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NuevaImagen" class="control-label"></label>
                <p>Agrega tu Imagen</p>
                <input type="file" name="NuevaImagen" id="NuevaImagen" />
                <span asp-validation-for="NuevaImagen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" value="@Model.id" name="id" />
                <input type="submit" value="Cambiar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

