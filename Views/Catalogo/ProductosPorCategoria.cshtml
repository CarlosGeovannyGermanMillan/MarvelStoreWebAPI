@model IEnumerable<TiendaMarvel.Models.ProductoEntity>

@{
    ViewData["Title"] = "ProductosPorCategoria";
}
<link rel="stylesheet" href="~/css/ProductosPorCategoria.css" />
<h1 style="text-align:right;color:black:font-size: 3em;margin-top: 5%;text-align: center;font-family:fantasy;">Catalogo</h1>
<div class="row">
    <ul>
        @foreach(var p in Model){
            <div class="">
            <div class="thumbnail">
            @if(!string.IsNullOrWhiteSpace(p.ImagenURL)){
                <a asp-controller="Catalogo" asp-action="Details" asp-route-id="@p.Codigo"  class="thumbnail">
                    <img src="@p.ImagenURL" alt="@p.Codigo" width="30%" height="50%">
                </a>                   
            }
            
            <div class="caption">
                <h2>@p.Nombre</h2>
                <h3>@p.Descripcion</h3>
                <h3>$@p.Precio</h3>
                <p>
                    <form asp-action="Agregar" asp-controller="Carrito">
                        <input type="hidden" name="Codigo" value= "@p.Codigo" />
                        <input type="hidden" name="Nombre" value= "@p.Nombre" />
                        <input type="hidden" name="Cantidad" value= "1" />
                        <input type="hidden" name="Descripcion" value= "@p.Descripcion" />
                        <input type="hidden" name="Precio" value= "@p.Precio" />
                        <input type="hidden" name="PrecioImpuesto" value= "@p.PrecioImpuesto" />
                        <input type="submit" class="btn btn-primary" role="button" value="Agregar" style="width:30%;"/>
                        
                    </form>
                    <!-- <a href="#" class="btn btn-primary" role="button">Agregar</a>  -->
                    
                </p>
            </div>
            </div>
            </div>
        }
    </ul>
</div>
